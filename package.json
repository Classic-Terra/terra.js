{
  "name": "@classic-terra/terra.js",
  "version": "3.1.11",
  "description": "The JavaScript SDK for Terra",
  "license": "MIT",
  "author": "Terra Classic Community",
  "keywords": [
    "terra",
    "stablecoin",
    "cryptocurrency",
    "blockchain",
    "smart-contracts",
    "wasm",
    "altcoin",
    "altcoins",
    "wallet"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/classic-terra/terra.js.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc --module commonjs && webpack --mode production",
    "test": "jest --runInBand",
    "format": "prettier --check \"{,!(node_modules),!(dist)/**/}*.ts\"",
    "format:fix": "prettier --write \"{,!(node_modules),!(dist)/**/}*.ts\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "doc": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.41",
    "@types/readable-stream": "^4.0.15",
    "@types/secp256k1": "^4.0.1",
    "@types/tmp": "^0.2.0",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "buffer": "^6.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.8.8",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typedoc": "^0.26.4",
    "typescript": "^5.5.3",
    "webpack": "^5.11.1",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@classic-terra/terra.proto": "^2.1.2",
    "@terra-money/terra.proto": "^2.1.0",
    "axios": "^1.6.4",
    "bech32": "^2.0.0",
    "bip32": "^2.0.6",
    "bip39": "^3.0.3",
    "decimal.js": "^10.2.1",
    "jscrypto": "^1.0.1",
    "readable-stream": "^3.6.0",
    "secp256k1": "^4.0.2",
    "tmp": "^0.2.1",
    "ws": "^7.5.10"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^5.0.10"
  }
}
